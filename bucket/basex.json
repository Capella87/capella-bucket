{
    "version": "12.1",
    "description": "A lightweight, high-performance and scalable XML Database and an XQuery 4.0 Processor",
    "homepage": "https://basex.org",
    "license": "BSD-3-Clause",
    "notes": "BaseX requires Java 17 or later.",
    "suggest": {
        "name": "java/microsoft-jdk"
    },
    "url": "https://files.basex.org/releases/12.1/BaseX121.zip",
    "hash": "bf19dd7a3f3e5a19c2d46e3ddcc59dc5757831405761348f0bcb1c732774edaa",
    "extract_dir": "basex",
    "pre_install": [
        "if (-not (Test-Path $dir/.basex)) { New-Item -ItemType File -Name .basex -Path $dir | Out-Null }",
        "if (-not (Test-Path $dir/.basexgui)) { New-Item -ItemType File -Name .basexgui -Path $dir | Out-Null }"
    ],
    "bin": [
        [
            "bin/basex.bat",
            "basex"
        ],
        [
            "bin/basexserver.bat",
            "basexserver"
        ],
        [
            "bin/basexclient.bat",
            "basexclient"
        ],
        [
            "bin/basexgui.bat",
            "basexgui"
        ]
    ],
    "shortcuts": [
        [
            "bin/basexgui.bat",
            "BaseX GUI"
        ]
    ],
    "persist": [
        "data",
        "repo",
        ".basex",
        ".basexgui"
    ],
    "checkver": {
        "url": "https://api.github.com/repos/BaseXdb/basex/tags",
        "regex": "([\\d.]+)",
        "reverse": false
    },
    "autoupdate": {
        "url": "https://files.basex.org/releases/$version/BaseX$cleanVersion.zip"
    }
}
