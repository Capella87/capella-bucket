        }
    },
    "post_install": [
        "$configFileExists = Test-Path $persist_dir\\config.toml",
        "if (-not $configFileExists) { wasmtime config new $dir\\config\\config.toml }"
    ],
    "bin": "wasmtime.exe",
    "persist": "config",
    "checkver": {
        "github": "https://github.com/bytecodealliance/wasmtime"
    },
