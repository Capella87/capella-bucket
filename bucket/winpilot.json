{
    "version": "2024.6.13",
    "description": "The manic cousin of Microsoft Copilot. You can see resurrected Clippy and it is even useful than the original!",
    "homepage": "https://github.com/builtbybel/Winpilot",
    "license": "MIT",
    "notes": [
        "This software requires WebView2 Runtime to be installed and administrator privileges to run.",
        "You can install WebView2 Runtime from the following link: https://developer.microsoft.com/en-us/microsoft-edge/webview2/"
    ],
    "url": "https://github.com/builtbybel/Winpilot/releases/download/2024.6.13/Winpilot.zip",
    "hash": "eb2670113f2f589189c63adfaf00fbb2fab8d8ba238d6aa23d3c3da8fcd4c38b",
    "installer": {
        "script": [
            "$settingsExist = Test-Path -Path $dir\\app\\settings.txt",
            "$persistSettingsExist = Test-Path -Path $persist_dir\\app\\settings.txt",
            "if (-not $settingsExist -or -not $persistSettingsExist) {",
            "New-Item -ItemType File -Path $dir\\app -Name settings.txt",
            "$settings = \"Theme=0\"",
            "Set-Content -Path $dir\\app\\settings.txt -Value $settings -Encoding utf8NoBOM",
            "}"
        ]
    },
    "bin": "Winpilot.exe",
    "shortcuts": [
        [
            "Winpilot.exe",
            "Winpilot"
        ]
    ],
    "persist": [
        "Winpilot.exe.WebView2",
        "plugins",
        "app\\settings.txt"
    ],
    "checkver": {
        "github": "https://github.com/builtbybel/Winpilot"
    },
    "autoupdate": {
        "url": "https://github.com/builtbybel/Winpilot/releases/download/$version/Winpilot.zip"
    }
}
